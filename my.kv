# #:kivy 2.0.0

<Container>:
    rows: 4
    padding: 0
    spacing: 0

    BoxLayout:
        orientation: 'vertical'    
        Spinner:
            id: spin_top
            text: "topic"
            values: 'mqtt/chat/android','Top2','Top3'
            size_hint: 1, 1
            # on_text: root.on_spinner_select(self)
        Label:
            id: label_out
            size_hint: 1, 10
            # text: 'dddddd'
            color: 'black'
            font_size: '20sp'
            background_color: (128/255.0,128/255.0,128/255.0,1)
            canvas.before:
				Color:
					rgba: self.background_color
				Rectangle:
					size: self.size
					pos: self.pos
            
        
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: text_input 
                size_hint: 0.7, 1
            Button:
                size_hint: 0.3,1
                background_color: (0,0,1,.7)
                text:'ОК'
                on_release: root.start_send()
